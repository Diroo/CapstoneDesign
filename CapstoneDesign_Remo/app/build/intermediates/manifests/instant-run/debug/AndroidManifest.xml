<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.imaginarywings.capstonedesign.remo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="23" />

    <!-- intent로 불러올 기본 camera feature 설정 -->
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.location.gps" />

    <!-- Needed only if your app targets Android 5.0 (API level 21) or higher. 위치 권한 요청 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- 기존 카메라를 사용하려면 이 퍼미션이 없어도 됨 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.hardware.camera.autofocus" />

    <!-- 사진을 외부 저장소에 저장할수 있도록 외부 저장소 write permission 설정 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- 위치정보 퍼미션? -->
    <uses-permission android:name="android.permission.LOCATION" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar" > <!-- 타이틀바 없앰 -->

        <activity android:name="com.imaginarywings.capstonedesign.remo.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.imaginarywings.capstonedesign.remo.PeopleActivity"
            android:label="People" >
        </activity>
        <activity
            android:name="com.imaginarywings.capstonedesign.remo.LandscapeActivity"
            android:label="Landscape" >
        </activity>
        <activity
            android:name="com.imaginarywings.capstonedesign.remo.CameraActivity"
            android:label="Camera" >
        </activity>

        <provider
            android:name="com.android.tools.fd.runtime.InstantRunContentProvider"
            android:authorities="com.imaginarywings.capstonedesign.remo.com.android.tools.fd.runtime.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>