<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background"
        tools:ignore="main background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/btnPeople"
            android:layout_width="400dp"
            android:layout_height="180dp"
            android:layout_marginBottom="10dp"
            android:background="#00000000"
            android:contentDescription="People button"
            android:scaleType="fitXY"
            android:src="@drawable/people" />

        <ImageButton
            android:id="@+id/btnLandscape"
            android:background="#00000000"
            android:layout_width="400dp"
            android:layout_height="180dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:contentDescription="Landscape button"
            android:src="@drawable/landscape"/>

        <ImageButton
            android:id="@+id/btnPhotospot"
            android:layout_width="400dp"
            android:layout_height="180dp"
            android:layout_marginBottom="10dp"
            android:background="#00000000"
            android:contentDescription="Photospot button"
            android:scaleType="fitXY"
            android:src="@drawable/photospot" />
    </LinearLayout>

</RelativeLayout>
