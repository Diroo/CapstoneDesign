<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.imaginarywings.capstonedesign.remo.MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:id="@+id/btnPeople"
        android:src="@drawable/people"
        android:background="#00000000"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/btnPhotospot"
        android:layout_alignParentStart="true"
        android:layout_marginStart="56dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:id="@+id/btnLandscape"
        android:src="@drawable/landscape"
        android:background="#00000000"
        android:layout_alignTop="@+id/btnPeople"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="56dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:id="@+id/btnPhotospot"
        android:src="@drawable/photospot"
        android:background="#00000000"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
